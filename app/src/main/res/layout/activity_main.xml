<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_to_zhiHu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="知乎头" />

        <Button
            android:id="@+id/btn_to_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="动画" />

        <Button
            android:id="@+id/btn_to_3d_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="3D动画" />

        <Button
            android:id="@+id/btn_to_contact_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="联系人列表" />

        <Button
            android:id="@+id/btn_to_define_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="刻度尺" />

        <Button
            android:id="@+id/btn_to_glide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Glide库的使用" />

        <Button
            android:id="@+id/btn_to_uil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Universal_Image_Loader库的使用" />

        <Button
            android:id="@+id/btn_to_toutiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="仿头条顶部导航" />

        <Button
            android:id="@+id/btn_to_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="相机" />

    </LinearLayout>
</ScrollView>
