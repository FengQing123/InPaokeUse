<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_to_define_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="View事件分发机制学习" />

        <Button
            android:id="@+id/btn_to_zhiHu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="知乎头" />

        <Button
            android:id="@+id/btn_to_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="动画" />

        <Button
            android:id="@+id/btn_to_3d_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="3D动画" />

        <Button
            android:id="@+id/btn_to_contact_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="小测试" />

        <Button
            android:id="@+id/btn_to_define_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="刻度尺" />

        <Button
            android:id="@+id/btn_to_glide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Glide库的使用" />

        <Button
            android:id="@+id/btn_to_uil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Universal_Image_Loader库的使用" />

        <Button
            android:id="@+id/btn_to_toutiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="AppBarLayout头部测试" />

        <Button
            android:id="@+id/btn_to_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="相机" />

        <Button
            android:id="@+id/btn_to_pullShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="下拉显示" />

        <Button
            android:id="@+id/btn_to_goMarket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="去应用商城" />

        <Button
            android:id="@+id/btn_to_chartView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义滑动折线图" />

        <Button
            android:id="@+id/btn_to_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="搜索框" />

        <Button
            android:id="@+id/btn_to_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="viewpager导航" />

        <Button
            android:id="@+id/btn_to_weibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="仿微博导航" />

        <Button
            android:id="@+id/btn_to_thread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="线程" />

        <Button
            android:id="@+id/btn_to_sw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="sw限定符" />

        <Button
            android:id="@+id/btn_to_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="ConstraintLayout测试" />

        <Button
            android:id="@+id/btn_to_statusbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="StatusBar状态栏" />

        <Button
            android:id="@+id/btn_to_drawlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="drawlayout左侧抽屉" />

        <Button
            android:id="@+id/btn_to_dialogfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="DialogFragment的使用" />

    </LinearLayout>
</ScrollView>
